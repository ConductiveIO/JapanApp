<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.robbygrodin.japanapp.WorldClock"
    android:id="@+id/container"
    android:gravity="center_vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Japan"
        android:id="@+id/japanTitle"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:layout_alignParentEnd="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/japanClock"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/japanTitle"
        android:layout_alignParentEnd="true"
        android:textSize="80dp"
        android:timeZone="Japan"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Boston"
        android:id="@+id/bostonTitle"
        android:layout_below="@+id/japanClock"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextClock
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/bostonClock"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bostonTitle"
        android:layout_alignParentEnd="true"
        android:textSize="80dp"
        android:timeZone="America/New_York"
        android:gravity="center_vertical|center_horizontal" />
</RelativeLayout>
